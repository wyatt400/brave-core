[
  {
    "namespace": "cryptoDotCom",
    "description": "Use the <code>chrome.cryptoDotCom</code> to interact with crypto.com services.",
    "compiler_options": {
      "implemented_in": "brave/browser/extensions/api/crypto_dot_com_api.h"
    },
    "types": [
      {
        "id": "AssetRanking",
        "type": "object",
        "properties": {
          "lastPrice": { "type": "string" },
          "pair": { "type": "string" },
          "percentChange": { "type": "string" }
        }
      },
      {
        "id": "AccountBalance",
        "type": "object",
        "properties": {
          "stake": { "type": "string" },
          "balance": { "type": "string" },
          "available": { "type": "string" },
          "currency": { "type": "string" },
          "currency_decimals": { "type": "number" },
          "order": { "type": "string" }
        }
      },
      {
        "id": "NewsEvent",
        "type": "object",
        "properties": {
          "content": { "type": "string" },
          "redirect_url": { "type": "string" },
          "updated_at": { "type": "string" },
          "redirect_title": { "type": "string" }
        }
      },
      {
        "id": "Order",
        "type": "object",
        "properties": {
          "instrument_name": { "type": "string" },
          "type": { "type": "string" },
          "side": { "type": "string" },
          "notional": {
            "type": "number",
            "optional": true
          },
          "quantity": {
            "type": "number",
            "optional": true
          }
        }
      },
      {
        "id": "OrderResult",
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "message": { "type": "string" }
        }
      },
      {
        "id": "DepositAddress",
        "type": "object",
        "properties": {
          "address": { "type": "string" },
          "qr_code": { "type": "string" },
          "currency": { "type": "string" }
        }
      }
    ],
    "functions": [
      {
        "name": "getTickerInfo",
        "type": "function",
        "description": "Gets price and volume info for an asset pair",
        "parameters": [
          {
            "type": "string",
            "name": "asset"
          },
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "info",
                "type": "object",
                "properties": {
                  "price": {
                    "type": "number",
                    "description": "price"
                  },
                  "volume": {
                    "type": "number",
                    "description": "volume"
                  }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "getChartData",
        "type": "function",
        "description": "Gets chart data for an asset pair",
        "parameters": [
          {
            "type": "string",
            "name": "asset"
          },
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "data",
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "t": {
                      "type": "number"
                    },
                    "o": {
                      "type": "number"
                    },
                    "h": {
                      "type": "number"
                    },
                    "l": {
                      "type": "number"
                    },
                    "c": {
                      "type": "number"
                    },
                    "v": {
                      "type": "number"
                    }
                  }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "getSupportedPairs",
        "type": "function",
        "description": "Gets supported asset pairs",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "data",
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "pair": {
                      "type": "string",
                      "description": "trading pair"
                    },
                    "base": {
                      "type": "string",
                      "description": "base asset"
                    },
                    "quote": {
                      "type": "string",
                      "description": "quote asset"
                    },
                    "price": {
                      "type": "string",
                      "description": "price decimals"
                    },
                    "quantity": {
                      "type": "string",
                      "description": "quantity decimals"
                    }
                  }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "getAssetRankings",
        "type": "function",
        "description": "Gets top gainers and losers",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "data",
                "type": "object",
                "properties": {
                  "gainers": {
                    "type": "array",
                    "description": "top gainers",
                    "items": { "$ref": "AssetRanking" }
                  },
                  "losers": {
                    "type": "array",
                    "description": "top losers",
                    "items": { "$ref": "AssetRanking" }
                  }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "isSupported",
        "type": "function",
        "description": "Fetches whether crypto.com is supported",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "supported",
                "type": "boolean"
              }
            ]
          }
        ]
      },
      {
        "name": "getAccountBalances",
        "type": "function",
        "description": "Retrieves user asset balances",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "balances",
                "type": "object",
                "properties": {
                  "total_balance": {
                    "type": "string"
                  },
                  "accounts": {
                    "type": "array",
                    "items": { "$ref": "AccountBalance" }
                  }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "getClientUrl",
        "type": "function",
        "description": "Retrieves crypto.com auth client url",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "url",
                "type": "string"
              }
            ]
          }
        ]
      },
      {
        "name": "isConnected",
        "type": "function",
        "description": "Check access token is valid or not",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "connected",
                "type": "boolean"
              }
            ]
          }
        ]
      },
      {
        "name": "disconnect",
        "type": "function",
        "description": "disconnect widget connect by invalidating access token",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "success",
                "type": "boolean"
              }
            ]
          }
        ]
      },
      {
        "name": "isLoggedIn",
        "type": "function",
        "description": "Check whether user logged in or not",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "loggedIn",
                "type": "boolean"
              }
            ]
          }
        ]
      },
      {
        "name": "getNewsEvents",
        "type": "function",
        "description": "Get latest news events",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "events",
                "type": "array",
                "items": { "$ref": "NewsEvent" }
              }
            ]
          }
        ]
      },
      {
        "name": "getDepositAddress",
        "type": "function",
        "description": "Retrieves deposit address",
        "parameters": [
          {
            "name": "asset",
            "type": "string"
          },
          {
            "name": "callback",
            "type": "function",
            "parameters": [
              {
                "name": "data",
                "$ref": "DepositAddress"
              }
            ]
          }
        ]
      },
      {
        "name": "createMarketOrder",
        "type": "function",
        "description": "Create market order for buy/sell",
        "parameters": [
          {
            "name": "order",
            "$ref": "Order"
          },
          {
            "name": "callback",
            "type": "function",
            "parameters": [
              {
                "name": "result",
                "$ref": "OrderResult"
              }
            ]
          }
        ]
      }
    ],
    "properties": {
    },
    "events": [
    ]
  }
]
